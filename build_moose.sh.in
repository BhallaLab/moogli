#!/bin/bash

set -x 
set -e

if [ -z "$MAKE" ]; then
    MAKE=make
fi

echo "Building PYMOOSE"
( 
    # Export environment variables for finding static libraries.
    export HDF5_ROOT=@HDF5_ROOT@
    export GSL_ROOT_DIR=@GSL_ROOT_DIR@
    mkdir -p @PYMOOSE_BUILD_DIR@
    cd @PYMOOSE_BUILD_DIR@
    cmake -DCMAKE_INSTALL_PREFIX=@PYMOOSE_INSTALL_DIR@ \
        -DCMAKE_SKIP_BUILD_RPATH=ON \
        @CMAKE_PYMOOSE_ARGS@ \
        @PYMOOSE_SOURCE_DIR@
    $MAKE
    $MAKE install
)
